@page "/"

<PageTitle>State Machine Experiments - Home</PageTitle>

<RadzenStack Gap="1.5rem">
    <RadzenCard Variant="Variant.Outlined">
        <RadzenStack Gap="0.5rem">
            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0.5rem">
                <RadzenIcon Icon="account_tree" IconStyle="IconStyle.Primary" Style="font-size: 3rem;" />
                <RadzenStack Gap="0">
                    <RadzenText TextStyle="TextStyle.H3" TagName="TagName.H1" class="rz-mb-0">
                        State Machine Experiments
                    </RadzenText>
                    <RadzenText TextStyle="TextStyle.H6" class="rz-color-secondary">
                        Line of Duty (LOD) Case Management System
                    </RadzenText>
                </RadzenStack>
            </RadzenStack>
            
            <RadzenAlert AlertStyle="AlertStyle.Info" Variant="Variant.Flat" Shade="Shade.Lighter" class="rz-mt-3">
                <RadzenStack Orientation="Orientation.Horizontal" Gap="0.5rem" AlignItems="AlignItems.Start">
                    <RadzenIcon Icon="celebration" />
                    <RadzenStack Gap="0">
                        <RadzenText TextStyle="TextStyle.Subtitle1"><strong>Welcome!</strong></RadzenText>
                        <RadzenText TextStyle="TextStyle.Body2">
                            This application demonstrates a modular state machine architecture for managing Line of Duty cases with modern Radzen Blazor components.
                        </RadzenText>
                    </RadzenStack>
                </RadzenStack>
            </RadzenAlert>
        </RadzenStack>
    </RadzenCard>

    <RadzenRow Gap="1.5rem">
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenCard Variant="Variant.Outlined" Style="height: 100%;">
                <RadzenStack Gap="1rem">
                    <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0.5rem">
                        <RadzenIcon Icon="assignment" IconStyle="IconStyle.Info" Style="font-size: 2rem;" />
                        <RadzenText TextStyle="TextStyle.H6" class="rz-mb-0">Quick Start</RadzenText>
                    </RadzenStack>
                    
                    <RadzenText TextStyle="TextStyle.Body1">Navigate to:</RadzenText>
                    
                    <RadzenStack Gap="0.5rem">
                        <RadzenButton 
                            Icon="assignment" 
                            Text="Informal LOD Cases" 
                            ButtonStyle="ButtonStyle.Primary" 
                            Variant="Variant.Outlined"
                            Click="@(() => NavigateTo("/informal-lod"))"
                            Style="width: 100%; justify-content: start;" />
                        <RadzenText TextStyle="TextStyle.Caption" class="rz-ml-4">
                            Create and manage informal Line of Duty cases
                        </RadzenText>
                        
                        <RadzenButton 
                            Icon="gavel" 
                            Text="Formal LOD Cases" 
                            ButtonStyle="ButtonStyle.Secondary" 
                            Variant="Variant.Outlined"
                            Click="@(() => NavigateTo("/formal-lod"))"
                            Style="width: 100%; justify-content: start;" 
                            class="rz-mt-2" />
                        <RadzenText TextStyle="TextStyle.Caption" class="rz-ml-4">
                            Create and manage formal Line of Duty cases with appeals
                        </RadzenText>
                    </RadzenStack>
                </RadzenStack>
            </RadzenCard>
        </RadzenColumn>

        <RadzenColumn Size="12" SizeMD="6">
            <RadzenCard Variant="Variant.Outlined" Style="height: 100%;">
                <RadzenStack Gap="1rem">
                    <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0.5rem">
                        <RadzenIcon Icon="stars" IconStyle="IconStyle.Success" Style="font-size: 2rem;" />
                        <RadzenText TextStyle="TextStyle.H6" class="rz-mb-0">Features</RadzenText>
                    </RadzenStack>
                    
                    <RadzenStack Gap="0.75rem">
                        <RadzenStack Orientation="Orientation.Horizontal" Gap="0.5rem" AlignItems="AlignItems.Start">
                            <RadzenIcon Icon="check_circle" IconStyle="IconStyle.Success" />
                            <RadzenStack Gap="0">
                                <RadzenText TextStyle="TextStyle.Subtitle2">Informal LOD Workflow</RadzenText>
                                <RadzenText TextStyle="TextStyle.Caption">Simplified process for straightforward cases</RadzenText>
                            </RadzenStack>
                        </RadzenStack>
                        
                        <RadzenStack Orientation="Orientation.Horizontal" Gap="0.5rem" AlignItems="AlignItems.Start">
                            <RadzenIcon Icon="check_circle" IconStyle="IconStyle.Success" />
                            <RadzenStack Gap="0">
                                <RadzenText TextStyle="TextStyle.Subtitle2">Formal LOD Workflow</RadzenText>
                                <RadzenText TextStyle="TextStyle.Caption">Comprehensive process with medical reviews</RadzenText>
                            </RadzenStack>
                        </RadzenStack>
                        
                        <RadzenStack Orientation="Orientation.Horizontal" Gap="0.5rem" AlignItems="AlignItems.Start">
                            <RadzenIcon Icon="check_circle" IconStyle="IconStyle.Success" />
                            <RadzenStack Gap="0">
                                <RadzenText TextStyle="TextStyle.Subtitle2">State Machine Pattern</RadzenText>
                                <RadzenText TextStyle="TextStyle.Caption">Stateless library for robust workflows</RadzenText>
                            </RadzenStack>
                        </RadzenStack>
                        
                        <RadzenStack Orientation="Orientation.Horizontal" Gap="0.5rem" AlignItems="AlignItems.Start">
                            <RadzenIcon Icon="check_circle" IconStyle="IconStyle.Success" />
                            <RadzenStack Gap="0">
                                <RadzenText TextStyle="TextStyle.Subtitle2">Modern UI</RadzenText>
                                <RadzenText TextStyle="TextStyle.Caption">Radzen Blazor component library</RadzenText>
                            </RadzenStack>
                        </RadzenStack>
                    </RadzenStack>
                </RadzenStack>
            </RadzenCard>
        </RadzenColumn>
    </RadzenRow>

    <RadzenCard Variant="Variant.Outlined">
        <RadzenStack Gap="1rem">
            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0.5rem">
                <RadzenIcon Icon="architecture" IconStyle="IconStyle.Warning" Style="font-size: 2rem;" />
                <RadzenText TextStyle="TextStyle.H6" class="rz-mb-0">Architecture Highlights</RadzenText>
            </RadzenStack>

            <RadzenTabs>
                <Tabs>
                    <RadzenTabsItem Text="Modular Design" Icon="widgets">
                        <RadzenCard class="rz-mt-3">
                            <RadzenText TextStyle="TextStyle.Body1" class="rz-mb-2">
                                Each workflow module is self-contained with its own:
                            </RadzenText>
                            <RadzenStack Gap="0.5rem">
                                <RadzenStack Orientation="Orientation.Horizontal" Gap="0.5rem">
                                    <RadzenBadge BadgeStyle="BadgeStyle.Primary" Text="Models" />
                                    <RadzenText TextStyle="TextStyle.Body2">State enums, entities, and domain types</RadzenText>
                                </RadzenStack>
                                <RadzenStack Orientation="Orientation.Horizontal" Gap="0.5rem">
                                    <RadzenBadge BadgeStyle="BadgeStyle.Secondary" Text="Services" />
                                    <RadzenText TextStyle="TextStyle.Body2">Data access, business rules, state machines</RadzenText>
                                </RadzenStack>
                                <RadzenStack Orientation="Orientation.Horizontal" Gap="0.5rem">
                                    <RadzenBadge BadgeStyle="BadgeStyle.Info" Text="Events" />
                                    <RadzenText TextStyle="TextStyle.Body2">Domain events for state transitions</RadzenText>
                                </RadzenStack>
                            </RadzenStack>
                        </RadzenCard>
                    </RadzenTabsItem>

                    <RadzenTabsItem Text="Type-Safe State" Icon="security">
                        <RadzenCard class="rz-mt-3">
                            <RadzenText TextStyle="TextStyle.Body1" class="rz-mb-2">
                                Enum-based states provide compile-time safety:
                            </RadzenText>
                            <RadzenStack Gap="0.5rem">
                                <RadzenStack Orientation="Orientation.Horizontal" Gap="0.5rem">
                                    <RadzenBadge BadgeStyle="BadgeStyle.Success" Text="States" />
                                    <RadzenText TextStyle="TextStyle.Body2">LodState / FormalLodState enums</RadzenText>
                                </RadzenStack>
                                <RadzenStack Orientation="Orientation.Horizontal" Gap="0.5rem">
                                    <RadzenBadge BadgeStyle="BadgeStyle.Success" Text="Triggers" />
                                    <RadzenText TextStyle="TextStyle.Body2">LodTrigger / FormalLodTrigger enums</RadzenText>
                                </RadzenStack>
                                <RadzenStack Orientation="Orientation.Horizontal" Gap="0.5rem">
                                    <RadzenBadge BadgeStyle="BadgeStyle.Success" Text="Authority" />
                                    <RadzenText TextStyle="TextStyle.Body2">LodAuthority / FormalLodAuthority enums</RadzenText>
                                </RadzenStack>
                            </RadzenStack>
                        </RadzenCard>
                    </RadzenTabsItem>

                    <RadzenTabsItem Text="Async Patterns" Icon="sync">
                        <RadzenCard class="rz-mt-3">
                            <RadzenText TextStyle="TextStyle.Body1" class="rz-mb-2">
                                All state machine operations use async patterns:
                            </RadzenText>
                            <RadzenStack Gap="0.5rem">
                                <RadzenStack Orientation="Orientation.Horizontal" Gap="0.5rem">
                                    <RadzenBadge BadgeStyle="BadgeStyle.Warning" Text="OnEntryAsync" />
                                    <RadzenText TextStyle="TextStyle.Body2">State entry actions</RadzenText>
                                </RadzenStack>
                                <RadzenStack Orientation="Orientation.Horizontal" Gap="0.5rem">
                                    <RadzenBadge BadgeStyle="BadgeStyle.Warning" Text="OnExitAsync" />
                                    <RadzenText TextStyle="TextStyle.Body2">State exit actions</RadzenText>
                                </RadzenStack>
                                <RadzenStack Orientation="Orientation.Horizontal" Gap="0.5rem">
                                    <RadzenBadge BadgeStyle="BadgeStyle.Warning" Text="Non-blocking" />
                                    <RadzenText TextStyle="TextStyle.Body2">Notification service integration</RadzenText>
                                </RadzenStack>
                            </RadzenStack>
                        </RadzenCard>
                    </RadzenTabsItem>
                </Tabs>
            </RadzenTabs>
        </RadzenStack>
    </RadzenCard>
</RadzenStack>
