@page "/about"

<PageTitle>About - State Machine Experiments</PageTitle>

<RadzenStack Gap="1.5rem">
    <RadzenCard Variant="Variant.Outlined">
        <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0.5rem">
            <RadzenIcon Icon="info" IconStyle="IconStyle.Primary" Style="font-size: 2rem;" />
            <RadzenText TextStyle="TextStyle.H4" TagName="TagName.H1" class="rz-mb-0">
                About This Application
            </RadzenText>
        </RadzenStack>
    </RadzenCard>

    <RadzenCard Variant="Variant.Outlined">
        <RadzenStack Gap="1rem">
            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0.5rem">
                <RadzenIcon Icon="flag" IconStyle="IconStyle.Info" />
                <RadzenText TextStyle="TextStyle.H6" class="rz-mb-0">Purpose</RadzenText>
            </RadzenStack>
            <RadzenText TextStyle="TextStyle.Body1">
                This application demonstrates a production-ready state machine architecture for managing complex workflows.
                It showcases best practices for implementing state-driven business logic in modern .NET applications with a beautiful,
                responsive user interface powered by Radzen Blazor Components.
            </RadzenText>
        </RadzenStack>
    </RadzenCard>

    <RadzenCard Variant="Variant.Outlined">
        <RadzenStack Gap="1rem">
            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0.5rem">
                <RadzenIcon Icon="code" IconStyle="IconStyle.Success" />
                <RadzenText TextStyle="TextStyle.H6" class="rz-mb-0">Technology Stack</RadzenText>
            </RadzenStack>
            
            <RadzenRow Gap="1rem">
                <RadzenColumn Size="12" SizeMD="6">
                    <RadzenCard Variant="Variant.Filled">
                        <RadzenStack Gap="0.5rem">
                            <RadzenStack Orientation="Orientation.Horizontal" Gap="0.5rem" AlignItems="AlignItems.Center">
                                <RadzenIcon Icon="web" IconStyle="IconStyle.Light" />
                                <RadzenText TextStyle="TextStyle.Subtitle1"><strong>Blazor WebAssembly</strong></RadzenText>
                            </RadzenStack>
                            <RadzenText TextStyle="TextStyle.Body2">Client-side web UI framework running in the browser</RadzenText>
                        </RadzenStack>
                    </RadzenCard>
                </RadzenColumn>
                
                <RadzenColumn Size="12" SizeMD="6">
                    <RadzenCard Variant="Variant.Filled">
                        <RadzenStack Gap="0.5rem">
                            <RadzenStack Orientation="Orientation.Horizontal" Gap="0.5rem" AlignItems="AlignItems.Center">
                                <RadzenIcon Icon="settings" IconStyle="IconStyle.Light" />
                                <RadzenText TextStyle="TextStyle.Subtitle1"><strong>.NET 10.0</strong></RadzenText>
                            </RadzenStack>
                            <RadzenText TextStyle="TextStyle.Body2">Latest .NET runtime with C# language features</RadzenText>
                        </RadzenStack>
                    </RadzenCard>
                </RadzenColumn>
                
                <RadzenColumn Size="12" SizeMD="6">
                    <RadzenCard Variant="Variant.Filled">
                        <RadzenStack Gap="0.5rem">
                            <RadzenStack Orientation="Orientation.Horizontal" Gap="0.5rem" AlignItems="AlignItems.Center">
                                <RadzenIcon Icon="account_tree" IconStyle="IconStyle.Light" />
                                <RadzenText TextStyle="TextStyle.Subtitle1"><strong>Stateless Library</strong></RadzenText>
                            </RadzenStack>
                            <RadzenText TextStyle="TextStyle.Body2">Hierarchical state machine with async support</RadzenText>
                        </RadzenStack>
                    </RadzenCard>
                </RadzenColumn>
                
                <RadzenColumn Size="12" SizeMD="6">
                    <RadzenCard Variant="Variant.Filled">
                        <RadzenStack Gap="0.5rem">
                            <RadzenStack Orientation="Orientation.Horizontal" Gap="0.5rem" AlignItems="AlignItems.Center">
                                <RadzenIcon Icon="storage" IconStyle="IconStyle.Light" />
                                <RadzenText TextStyle="TextStyle.Subtitle1"><strong>Entity Framework Core</strong></RadzenText>
                            </RadzenStack>
                            <RadzenText TextStyle="TextStyle.Body2">In-memory database for case persistence</RadzenText>
                        </RadzenStack>
                    </RadzenCard>
                </RadzenColumn>
                
                <RadzenColumn Size="12" SizeMD="6">
                    <RadzenCard Variant="Variant.Filled">
                        <RadzenStack Gap="0.5rem">
                            <RadzenStack Orientation="Orientation.Horizontal" Gap="0.5rem" AlignItems="AlignItems.Center">
                                <RadzenIcon Icon="email" IconStyle="IconStyle.Light" />
                                <RadzenText TextStyle="TextStyle.Subtitle1"><strong>MailKit</strong></RadzenText>
                            </RadzenStack>
                            <RadzenText TextStyle="TextStyle.Body2">SMTP email service integration</RadzenText>
                        </RadzenStack>
                    </RadzenCard>
                </RadzenColumn>
                
                <RadzenColumn Size="12" SizeMD="6">
                    <RadzenCard Variant="Variant.Filled">
                        <RadzenStack Gap="0.5rem">
                            <RadzenStack Orientation="Orientation.Horizontal" Gap="0.5rem" AlignItems="AlignItems.Center">
                                <RadzenIcon Icon="dashboard" IconStyle="IconStyle.Light" />
                                <RadzenText TextStyle="TextStyle.Subtitle1"><strong>Radzen Blazor</strong></RadzenText>
                            </RadzenStack>
                            <RadzenText TextStyle="TextStyle.Body2">Professional UI component library</RadzenText>
                        </RadzenStack>
                    </RadzenCard>
                </RadzenColumn>
            </RadzenRow>
        </RadzenStack>
    </RadzenCard>

    <RadzenCard Variant="Variant.Outlined">
        <RadzenStack Gap="1rem">
            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0.5rem">
                <RadzenIcon Icon="verified" IconStyle="IconStyle.Warning" />
                <RadzenText TextStyle="TextStyle.H6" class="rz-mb-0">State Machine Pattern Benefits</RadzenText>
            </RadzenStack>
            
            <RadzenRow Gap="1rem">
                <RadzenColumn Size="12" SizeMD="6">
                    <RadzenCard class="rz-border-primary-light" Style="height: 100%;">
                        <RadzenStack Gap="0.5rem">
                            <RadzenStack Orientation="Orientation.Horizontal" Gap="0.5rem">
                                <RadzenIcon Icon="shield" IconStyle="IconStyle.Primary" />
                                <RadzenText TextStyle="TextStyle.Subtitle1">Type Safety</RadzenText>
                            </RadzenStack>
                            <RadzenText TextStyle="TextStyle.Body2">
                                Enum-based states and triggers eliminate runtime errors from string mismatches.
                            </RadzenText>
                        </RadzenStack>
                    </RadzenCard>
                </RadzenColumn>
                
                <RadzenColumn Size="12" SizeMD="6">
                    <RadzenCard class="rz-border-secondary-light" Style="height: 100%;">
                        <RadzenStack Gap="0.5rem">
                            <RadzenStack Orientation="Orientation.Horizontal" Gap="0.5rem">
                                <RadzenIcon Icon="arrow_forward" IconStyle="IconStyle.Secondary" />
                                <RadzenText TextStyle="TextStyle.Subtitle1">Explicit Transitions</RadzenText>
                            </RadzenStack>
                            <RadzenText TextStyle="TextStyle.Body2">
                                All valid state transitions are defined upfront, preventing invalid state changes.
                            </RadzenText>
                        </RadzenStack>
                    </RadzenCard>
                </RadzenColumn>
                
                <RadzenColumn Size="12" SizeMD="6">
                    <RadzenCard class="rz-border-info-light" Style="height: 100%;">
                        <RadzenStack Gap="0.5rem">
                            <RadzenStack Orientation="Orientation.Horizontal" Gap="0.5rem">
                                <RadzenIcon Icon="business" IconStyle="IconStyle.Info" />
                                <RadzenText TextStyle="TextStyle.Subtitle1">Centralized Business Logic</RadzenText>
                            </RadzenStack>
                            <RadzenText TextStyle="TextStyle.Body2">
                                Workflow logic is encapsulated in state machine configuration, not scattered across controllers.
                            </RadzenText>
                        </RadzenStack>
                    </RadzenCard>
                </RadzenColumn>
                
                <RadzenColumn Size="12" SizeMD="6">
                    <RadzenCard class="rz-border-success-light" Style="height: 100%;">
                        <RadzenStack Gap="0.5rem">
                            <RadzenStack Orientation="Orientation.Horizontal" Gap="0.5rem">
                                <RadzenIcon Icon="history" IconStyle="IconStyle.Success" />
                                <RadzenText TextStyle="TextStyle.Subtitle1">Auditability</RadzenText>
                            </RadzenStack>
                            <RadzenText TextStyle="TextStyle.Body2">
                                Every state transition is recorded in the database with timestamps and metadata.
                            </RadzenText>
                        </RadzenStack>
                    </RadzenCard>
                </RadzenColumn>
                
                <RadzenColumn Size="12">
                    <RadzenCard class="rz-border-warning-light">
                        <RadzenStack Gap="0.5rem">
                            <RadzenStack Orientation="Orientation.Horizontal" Gap="0.5rem">
                                <RadzenIcon Icon="check_circle" IconStyle="IconStyle.Warning" />
                                <RadzenText TextStyle="TextStyle.Subtitle1">Testability</RadzenText>
                            </RadzenStack>
                            <RadzenText TextStyle="TextStyle.Body2">
                                State machines can be easily unit tested with mock services and validators.
                            </RadzenText>
                        </RadzenStack>
                    </RadzenCard>
                </RadzenColumn>
            </RadzenRow>
        </RadzenStack>
    </RadzenCard>

    <RadzenCard Variant="Variant.Outlined">
        <RadzenStack Gap="1rem">
            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0.5rem">
                <RadzenIcon Icon="alt_route" IconStyle="IconStyle.Danger" />
                <RadzenText TextStyle="TextStyle.H6" class="rz-mb-0">Workflow Examples</RadzenText>
            </RadzenStack>
            
            <RadzenRow Gap="1rem">
                <RadzenColumn Size="12" SizeMD="6">
                    <RadzenCard Variant="Variant.Filled">
                        <RadzenStack Gap="0.5rem">
                            <RadzenText TextStyle="TextStyle.Subtitle1"><strong>Informal LOD Process</strong></RadzenText>
                            <RadzenSteps>
                                <Steps>
                                    <RadzenStepsItem Text="Start" />
                                    <RadzenStepsItem Text="Member Reports" />
                                    <RadzenStepsItem Text="Initial Review" />
                                    <RadzenStepsItem Text="Determination" />
                                    <RadzenStepsItem Text="End" />
                                </Steps>
                            </RadzenSteps>
                        </RadzenStack>
                    </RadzenCard>
                </RadzenColumn>
                
                <RadzenColumn Size="12" SizeMD="6">
                    <RadzenCard Variant="Variant.Filled">
                        <RadzenStack Gap="0.5rem">
                            <RadzenText TextStyle="TextStyle.Subtitle1"><strong>Formal LOD Process</strong></RadzenText>
                            <RadzenSteps>
                                <Steps>
                                    <RadzenStepsItem Text="Start" />
                                    <RadzenStepsItem Text="Member Reports" />
                                    <RadzenStepsItem Text="Initial Review" />
                                    <RadzenStepsItem Text="Medical Review" />
                                    <RadzenStepsItem Text="Determination" />
                                    <RadzenStepsItem Text="Optional Appeal" />
                                    <RadzenStepsItem Text="End" />
                                </Steps>
                            </RadzenSteps>
                        </RadzenStack>
                    </RadzenCard>
                </RadzenColumn>
            </RadzenRow>
        </RadzenStack>
    </RadzenCard>

    <RadzenCard Variant="Variant.Outlined">
        <RadzenStack Gap="1rem">
            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0.5rem">
                <RadzenIcon Icon="developer_board" IconStyle="IconStyle.Secondary" />
                <RadzenText TextStyle="TextStyle.H6" class="rz-mb-0">Development Practices</RadzenText>
            </RadzenStack>
            
            <RadzenText TextStyle="TextStyle.Body1">This project demonstrates modern .NET development practices including:</RadzenText>
            
            <RadzenDataList Data="@developmentPractices" TItem="DevelopmentPractice">
                <Template Context="practice">
                    <RadzenStack Orientation="Orientation.Horizontal" Gap="0.5rem" AlignItems="AlignItems.Start">
                        <RadzenIcon Icon="@practice.Icon" IconStyle="IconStyle.Success" />
                        <RadzenStack Gap="0">
                            <RadzenText TextStyle="TextStyle.Subtitle2">@practice.Title</RadzenText>
                            <RadzenText TextStyle="TextStyle.Body2">@practice.Description</RadzenText>
                        </RadzenStack>
                    </RadzenStack>
                </Template>
            </RadzenDataList>
        </RadzenStack>
    </RadzenCard>
</RadzenStack>
